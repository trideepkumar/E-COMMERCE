<div class="main-container" style="height:100vh">
  <aside class="aside">
    <a href="/admin/admin-dash" class="admin-dash p-5"><i class="fa-solid fa-table-columns"></i>dashboard</a>
    <a href="/admin/category" class="admin-dash p-5"><i class="fa-solid fa-user"></i>categories</a>
    <a href="" class="admin-dash p-5"><i class="fa-solid fa-bag-shopping"></i>products</a>
    <a href="" class="admin-dash p-5"><i class="fa-solid fa-id-card-clip"></i></i>coupons</a>
    <a href="" class="admin-dash p-5"><i class="fa-solid fa-cart-flatbed-suitcase"></i>orders</a>
    <a href="/admin/admin-user" class="admin-dash p-5"><i class="fa-solid fa-users"></i>users</a>
    <a href="/admin/logout" class="logout-button">logout</a>
  </aside>
  <section class="container ">
    <div class="row" style="width: 700px;">
      <div class="container-fluid mx-auto d-flex justify-content-between" style=" height:8rem">
        <h1 class="ms-0">Category Management</h1>
        <div class="mt-5">
          <a class="btn btn-success" href="/admin/add-category">Add Category</a>
        </div>
      </div>
      <div class="col-12 table-overflow">
        <div class="container  mx-auto" style="width: 800 px;">
          <table class="table text-center mt-4" id="datatable">
            <thead class="bg-success text-light">
              <tr>
                <th>Category Name</th>
                <th style="width: 16.66%">Action</th>
              </tr>
            </thead>
            <tbody style="width: 800 px;">

              {{#each categoryList}}
              <tr>
                <td>
                  <p class="mx-0 mb-0 d-flex justify-content-start " style="color: rgb(0, 0, 0); ">{{name}}</p>
                </td>
                {{#if Delete}}
                <td class="text-center">
                  <ul class="d-flex justify-content-start" style="list-style-type: none;">
                    <li class="px-lg-0">
                      <button class=" delete-cat btn btn-success" data-url={{_id}}>block</button>
                    </li>
                  </ul>
                  </td>
                  {{else}}
                  <td class="text-center">
                  <ul class="d-flex justify-content-start" style="list-style-type: none;">
                    <li class="px-lg-0">
                      <button class=" delete-cat btn btn-danger" data-url={{_id}}>block</button>
                    </li>
                  </ul>
                </td>
                 {{/if}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
  </section>
</div>

<script src="/javascript/deleteCategory.js"></script>