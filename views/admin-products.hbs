<div class="container mx-auto d-flex justify-content-between  " style=" height:8rem">
    <h1 class=""  style="margin-top: 8rem;">Products List</h1>
    <div class="">
        <a class="btn btn-success  " href="/admin/add-products"  style="margin-top:8rem;">Add Product</a>
    </div>
</div>
<div class="container vh-100% mx-auto"  style="margin-top: 7rem;">
    <table class="table align-middle text-center mt-4" id="datatable">
        <thead class="bg-dark text-light">
            <tr>
                <th style="width: 16.66%">Product</th>
                <th style="width: 16.66%">Price</th>
                <th style="width: 16.66%;">Image</th>
                <th style="width: 16.66%">Category</th>
                <th style="width: 16.66%">Description</th>
                <th style="width: 16.66%">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each productList}}
            <tr>
                <td>
                    <p class="mx-0 mb-0 d-flex justify-content-start ">{{name}}</p>
                </td>
                <td class="mx-0 mb-0 d-flex justify-content-start ">{{price}}</td>

                <td>
                    <div class="d-flex align-items-center">
                        <img src="{{image.[0]}}" alt=""
                            style="width: 45px; height: 45px; display: block; margin-left: auto; margin-right: auto;"
                            class="mx-0 mb-0 d-flex justify-content-start rounded" />
                    </div>
                </td>
                <td>
                    <p class="mx-0 mb-0 d-flex justify-content-start ">{{category.name}}</p>
                </td>
                 <td>
                    <p class="mx-0 mb-0 d-flex justify-content-start ">{{description}}</p>
                </td>
                <td class="text-center ">
                    <ul class="mx-4 d-flex flex-row" style="list-style-type: none;">
                        <li class="px-lg-3">
                         <a class="mx-0 mb-0 d-flex justify-content-start btn btn-success "
                                href="/admin/edit/product/{{_id}}">Edit</a>
                        </li>
                        <li class="px-lg-3">
                            <a class="mx-0 mb-0 d-flex justify-content-start btn btn-danger delete-prod" data-url={{_id}}>Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/javascript/deleteProduct.js"></script>