<section class="vh-100" style="background-color: #eaeaea;">
    <div class="container h-100">
        <div class="row d-flex   h-100">
            <div class="col" style="padding-top:10rem;">
                <p><span class="h2">Shopping Cart </span><span class="h4">(Total items: 2)</span></p>
                {{#each cartItems}}
                <div class="card-body">
                    <div class="row d-flex justify-content-between  "
                        style="background-color:rgb(212, 214, 214) ; border-radius:10px;">
                        <div class="col-md-2 ">
                            <img src="{{id.image.[0]}}" class="img-fluid" alt="product images">
                        </div>
                        <div class="col-md-2   pt-5">
                            <div>
                                <p class="lead text-muted mb-4 pb-2">Name:{{id.name}}</p>
                                <p class="lead fw-normal mb-0">RS.{{id.price}}</p>
                            </div>
                        </div>

                        <div class="col-md-2 ">
                            <div class="card-quantity-details">
                                <button {{#if decrement}} disabled {{/if}} data-url="{{id._id}}"
                                    style="background:orange; width:3rem; height:1px; display:flex; justify-content:center; align-items:center; margin-top:1rem;">
                                    - </button>

                                <h4 class="quantity">quantity</h4>

                                <button {{#if increment}} disabled {{/if}} data-url="{{id._id}}"
                                    style="background:skyblue; width:3rem; height:1rem; display:flex; justify-content:center; align-items:center;">
                                    + </button>
                            </div>

                        </div>
                        <div class="col-md-2 ">
                            <div class="col-md-2  ">
                                <div>
                                    <p class="small text-muted mb-4 pb-2 pl-5"> Price</p>
                                    <p class="lead fw-normal mb-0">RS.{{id.price}}</p>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-2 ">
                            <div>
                                <p class="small text-muted mb-4 pb-2 pl-5">Total Price</p>
                                <p class="lead fw-normal mb-0">RS.{{id.price}}</p>
                            </div>
                        </div>
                        <div>

                        </div>

                    </div>
                </div>

                {{!--
            </div> --}}
            {{/each}}
            <div class="card mb-5" style="width: 110rem; height:11rem;">
                <div class="card-body p-4">

                    <div class="float-end">
                        <p class="d-flex justify-content-center align-items-center">
                            <span class="bold text-muted me-2">Cart Total Price</span>&nbsp; <span class=" fw-normal">Rs:</span>
                        </p>
                    </div>

                </div>
            </div>
            <div class="d-flex " style="position:fixed;  marging-left:6rem margin: bottom 2rem;">
                <a type="button" class="btn btn-light btn-lg  "
                    style="background: rgb(241, 243, 175); width:55rem; border-width:1px; border-color:black"
                    href="/user/products">Continue shopping</a>
                <a type="button" class="btn btn btn-lg" style="border-width:1px;  width:55rem; border-color:black">Buy
                    Now</a>
            </div>
        </div>
    </div>

</section>